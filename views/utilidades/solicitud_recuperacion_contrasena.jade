    script(src='/js/libs/jquery.min.js')
    // Bootstrap
    script(src='../../js/bootstrap.min.js', type='text/javascript')
    // alertifyjs-js
    script(src='/js/alertifyjs/alertify.min.js')
    // Utilidades - alertas
    script(src='../../js/pages/utilidades/alertas.js', type='text/javascript')    
    // Utilidades - animaciones
    script(src='/js/pages/utilidades/animaciones.js', type='text/javascript')
    // steem-js
    script(src='/js/steemjs/steem.min.js')
    // Utilidades - configuracion
    script(src='../../js/pages/configuracion/configuracion.js', type='text/javascript')    
    // JS - page login
    script(src='/js/pages/sesion.js')