							// /.row - inside box
						// /.box-body
						.box-footer(style="display: block;")
							button#send_cfg_auto_btn.btn.bg-blanco.btn-sm(data-toggle='tooltip',	title='Presione para guardar', style="float:pull-right;", onclick='perfil_configuracion_automatizacion.guardar_cfg_auto()')
