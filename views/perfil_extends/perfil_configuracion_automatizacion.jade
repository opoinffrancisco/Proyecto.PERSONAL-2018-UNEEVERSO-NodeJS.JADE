						// tools box
						.pull-right.box-tools
							button.btn.bg-blanco.btn-sm(data-widget='collapse', data-toggle='tooltip',	title='Abrir/Cerrar')
								i.fa.fa-minus
						// /. tools
						i.fa.fa-gears(style='padding-right:  20px;')
						.box-title Configuración de automatización
					// /.box-header
					.box-body(style="display: block;")
						.row
							.col-sm-12
								button#btn-migrar_autorizacion_steem_uneeverso.btn.bg-green.btn-block(style='display:none;',type='button',onclick="",data-toggle='modal' data-target='#compose-modal_autoridad')
