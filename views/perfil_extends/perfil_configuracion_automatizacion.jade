								button#btn-autorizacion_steem_uneeverso.btn.bg-blue.btn-block(style='display:none;',type='button',onclick="$('#compose-modal_autoridad').modal('show')") 	
									b Autorización STEEM-UNEEVERSO  
								a#btn-q_autorizacion_steem_uneeverso.btn.btn-block(style='display:none;',target='_blank',href='https://steemconnect.com/revoke/@uneeverso') 
									b Anular autorización STEEM-UNEEVERSO
								button#btn-q_verificar_autorizacion.btn.btn-block(style='display:none;',type='button',onclick="autorizacion_steem.validar_autorizacion()") Verificar autorización
							// /.col
						// /.row - inside box
					// /.box-body
