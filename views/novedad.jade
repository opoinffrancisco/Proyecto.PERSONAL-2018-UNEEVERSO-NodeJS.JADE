block content
	section.content
		.mailbox.row
			.col-xs-8
				#contendedor_novedades
					each b_datos in datos.result
						.box.box-solid(style='margin-bottom: 5px;')
							.box-body
								.row
									.col-md-12
										a(href='/@#{b_datos.nombre_autor}',target='_blank')
											b #{b_datos.nombre_autor}
										span(style='color: #b4b6b8;')  publicado el :
										b(style='color: #b4b6b8;') #{b_datos.fecha_registro}
								.row(style='padding-left: 15px;margin-top:  10px;')
									.col-md-3(style='width:130px;padding:  0px;height: 100%;')
										a(href='/novedad/#{b_datos.url}/@#{b_datos.nombre_autor}')
											img(src='#{b_datos.url_imagen}',style='width:  130px;padding:  5px;height: 77px;')
									.col-md-9
										.row(style='margin-top: 10px;')
											.col-md-12
												a(href='/novedad/#{b_datos.url}/@#{b_datos.nombre_autor}')
													h5 #{b_datos.nombre_muestra}
				#carga_datos.box.box-solid(style='margin-bottom: 5px;')
					.box-body
						.row
							.col-md-12
								center
									img(src='/img/procesar_datos.gif' style='width: 25px;height: 25px;margin: 5px 7px;')
			.col-xs-4
				.box.box-solid
					.box-body
						.row
							.col-md-12
								img(style='width:100%;',src='https://steemitimages.com/DQmaR9iapVpvJdGRC7uWNyacEK2yTyXBGjCn4BXdmix9J7y/marketing-uneeverso-956x538.gif')
				ins.adsbygoogle(style='display:block',data-ad-client='ca-pub-2749621828224514',data-ad-slot='7910786719',data-ad-format='auto')
