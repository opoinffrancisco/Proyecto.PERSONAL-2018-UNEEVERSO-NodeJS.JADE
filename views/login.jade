  body.login( onload='sesion.app()')
    a#logo_uneeverso(href='/')
      img(src='/img/uneeverso.png',style='position:  fixed;height:  100px;width:  100px;margin: 30px;')
    #login-box.form-box(style='margin:60px auto 0 auto;')
      .header.skin-blue Uneeverso
      form( method='post')
        .body.bg-gray
          .form-group
            input.form-control(type='text', name='usuario_steem', id='usuario_steem', placeholder='Usuario steem', value='',required='TRUE')
          .form-group
            input.form-control(type='password', name='contrasena_uneeverso' id='contrasena_uneeverso', placeholder='Contraseña de acceso a uneeverso', value='', required='TRUE')
          a(href='/cuenta/solicitud-recuperacion-contrasena') Recuperar contraseña 
        .footer
          a#btn-acceder.btn.bg-blue.btn-block(onclick='sesion.iniciar()') Iniciar sesión
          a#btn-ir-registro.btn.bg-blue.btn-block(href="/registro") Registrar
    // jQuery 2.0.2
    script(src='/js/libs/jquery.min.js')
    // Bootstrap
    script(src='../../js/bootstrap.min.js', type='text/javascript')
    // alertifyjs-js
    script(src='/js/alertifyjs/alertify.min.js')
    // Utilidades - alertas
    script(src='../../js/pages/utilidades/alertas.js', type='text/javascript')
    // Utilidades - animaciones
    script(src='/js/pages/utilidades/animaciones.js', type='text/javascript')    
    // steem-js
    script(src='/js/steemjs/steem.min.js')
    // JS - page login
    script(src='/js/pages/sesion.js')